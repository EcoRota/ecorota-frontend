---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'button'> & {
  text: string;
};

const { text, ...attrs } = Astro.props;
---

<button
  {...attrs}
  class="flex h-12 w-full items-center justify-center rounded-lg bg-green-700 px-2 text-white transition ease-in-out hover:brightness-90"
  >{text}</button
>
