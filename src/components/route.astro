---
type Props = {
  name: string;
  slug: string;
  time: string;
  experience: string[];
  fullPrice: number;
  priceWithDiscount: number;
  priceInstallmentsNumber: number;
  image: string;
  imageAlt: string;
  tags: string[];
};

const {
  name,
  slug,
  time,
  experience,
  fullPrice,
  priceWithDiscount,
  priceInstallmentsNumber,
  image,
  tags,
  imageAlt,
} = Astro.props;
---

<a href={`/routes/${slug}`} class="group relative w-full min-w-min">
  <div
    class="h-fit w-full overflow-hidden rounded-md bg-white pb-4 shadow-lg transition-all group-hover:opacity-75"
  >
    {
      tags.map((tag) => {
        return (
          <span class="font-fredoka absolute right-2 top-2 items-center rounded-md bg-[#ED7681] px-3.5 py-1.5 text-sm font-medium text-white shadow-md">
            {tag}
          </span>
        );
      })
    }
    <img src={image} alt={imageAlt} class="w-full object-cover object-center" />
    <div class="grid gap-2 px-3">
      <h3 class="mt-4 text-base text-gray-700">
        {name}
      </h3>
      <div class="flex items-center gap-2">
        <img
          src="/icons/clock.svg"
          alt="icone de um relógio"
          class="aspect-square h-4"
        />
        <span class="font-fredoka text-sm font-bold">{time}</span>
      </div>
      <ul class="my-4 grid gap-1">
        {
          experience.map((item) => {
            return (
              <li class="flex items-center gap-2">
                <img
                  src="/icons/check.svg"
                  alt="icone de um relógio"
                  class="aspect-square h-4"
                />
                <span class="text-sm text-gray-700">{item}</span>
              </li>
            );
          })
        }
      </ul>
      <div class="grid gap-1">
        <span class="font-fredoka text-xs"
          >A partir de <span class="line-through">R$ {fullPrice}</span></span
        >
        <span class="text-green-800">R$ {priceWithDiscount}</span>
        <span class="font-fredoka text-xs"
          >Em até {priceInstallmentsNumber}x</span
        >
      </div>
    </div>
  </div>
</a>
